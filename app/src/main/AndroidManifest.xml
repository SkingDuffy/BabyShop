<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babyshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_red"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.general.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.general.LoginActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.RegisterActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.main.HomeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>

        <activity android:name=".ui.general.CommodityListActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.CommodityActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.GenerateOrderActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.OrderListActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.AddressActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.general.OrderActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>