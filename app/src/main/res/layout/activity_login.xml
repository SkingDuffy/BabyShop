<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="38dp"
        android:paddingTop="73dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_logo_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:includeFontPadding="true"
            android:text="@string/app_name"
            android:textColor="@color/text_base"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:id="@+id/iv_username"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_avatar_disable" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_dele_username"
                android:layout_toRightOf="@+id/iv_username"
                android:background="@null"
                android:hint="请输入用户名"
                android:inputType="textVisiblePassword"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/text_base"
                android:textColorHint="@color/text_grey"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_dele_username"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_dele"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_lock_disable" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_dele_pwd"
                android:layout_toRightOf="@+id/iv_password"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/text_base"
                android:textColorHint="@color/text_grey"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_dele_pwd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_dele"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="11dp"
            android:background="@null"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/blue_base"
            android:textSize="14dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_main_shape4dp"
            android:gravity="center"
            android:onClick="userLogin"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/student_regiseter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:background="@color/bg_base"
            android:gravity="center"
            android:onClick="userRegister"
            android:text="注册"
            android:textColor="@color/blue_base"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>